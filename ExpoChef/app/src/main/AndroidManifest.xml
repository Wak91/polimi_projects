<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.polimi.expogame" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".fragments.ar.ARActivity"
            android:label="@string/title_activity_ar" >
        </activity>
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".providers.IngredientsProvider"
            android:authorities="it.polimi.expogame"
            android:enabled="true"
            android:exported="false" >
        </provider>
        <provider
            android:name=".providers.MascotsProvider"
            android:authorities="it.polimi.expogame"
            android:enabled="true"
            android:exported="false" >
        </provider>
        <provider
            android:name=".providers.DishesProvider"
            android:authorities="it.polimi.expogame"
            android:enabled="true"
            android:exported="false" >
        </provider>
    </application>

</manifest>
