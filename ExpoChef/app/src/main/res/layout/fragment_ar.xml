<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" tools:context="it.polimi.expogame.fragments.ar.ARFragment"
>

    <ImageView
        android:id="@+id/buttonStartMetaio"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:onClick="startMetaio"
        android:src="@drawable/expologo"
        android:layout_gravity="center"
        android:layout_weight="2"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/catchit"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal|bottom"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_weight="2"
        />


</LinearLayout>
