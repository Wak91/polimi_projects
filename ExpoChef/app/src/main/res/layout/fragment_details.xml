<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="it.polimi.expogame.fragments.info.DetailsFragment"
    android:background="@drawable/pergamena"
    android:alpha=".65">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/nameDishLabel"
            android:layout_gravity="center|top"
            android:paddingTop="20dp"
            android:textStyle="bold|italic"
            android:textColor="@color/secondary_text_default_material_light"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/imageDish"
            android:layout_gravity="center"
            android:layout_weight="0.30" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/labelNationality"
            android:text="@string/label_nationality"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/secondary_text_default_material_light"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/nationality_dish"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/secondary_text_default_material_light"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/labelDescription"
            android:text="@string/label_description"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/secondary_text_default_material_light"
            />

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:layout_weight="0.60"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/description_dish"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/secondary_text_default_material_light"
                />

        </ScrollView>



        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/shareButton"
            android:layout_gravity="right|top"
            android:background="@drawable/facebook"
            android:layout_weight="0.05"
            />
    </LinearLayout>

</FrameLayout>
