<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polimi.expogame.fragments.options.OptionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.07">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_option_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="45dp"
                android:text="@string/optionstitle"
                android:gravity="center"
                android:textColor="@color/primary_material_dark" />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_option_music"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="30dp"
                android:text="@string/text_music_option"
                android:gravity="center"
                android:textColor="@color/primary_material_dark">
            </TextView>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_option_music"
                android:gravity="center"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.07">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_option_audio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="30dp"
                android:gravity="center"
                android:text="@string/text_audio_option"
                android:textColor="@color/primary_material_dark">
            </TextView>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_option_audio"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.10">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_option_tutorial"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="30dp"
                android:gravity="center"
                android:text="@string/text_tutorial_option"
                android:textColor="@color/primary_material_dark">
            </TextView>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_option_tutorial"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>




</FrameLayout>
