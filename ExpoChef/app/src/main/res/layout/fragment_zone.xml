<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="it.polimi.expogame.fragments.info.WorldFragment"
        android:orientation="vertical"
        android:id="@+id/zone_fragment_layout"
    android:background="#ffffe4a0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/title_zone_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="25dp"
            android:text="@string/list_zone_activity"
            android:textColor="@color/primary_material_dark"

            android:layout_gravity="center">
        </TextView>

        <GridView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnWidth="70dp"
            android:numColumns="3"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:id="@+id/grid_dish">


        </GridView>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cooker_image"/>
    <TextView
        android:layout_width="210dp"
        android:layout_height="154dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/start_text_tutorial_zone"
        android:id="@+id/speak_tutorial_zone"
        android:layout_gravity="left|top"
        android:background="@drawable/nuvola"
        android:layout_margin="5dp"
        android:gravity="center_horizontal|clip_horizontal|clip_vertical"
        android:autoText="false"
        android:paddingTop="30dp"
        android:visibility="invisible"/>


</FrameLayout>
