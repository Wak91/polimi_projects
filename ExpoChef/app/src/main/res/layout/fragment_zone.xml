<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="it.polimi.expogame.fragments.info.WorldFragment"
        android:orientation="vertical"
        android:id="@+id/zone_fragment_layout">


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title_zone_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="25dp"
        android:text="@string/list_zone_activity">
    </TextView>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_dishes_zone_fragment"
        android:layout_gravity="left|center_vertical"
        />

</LinearLayout>
