<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="it.polimi.expogame.fragments.info.WorldFragment"
        android:orientation="vertical"
        android:id="@+id/zone_fragment_layout"
    android:background="#ffdcff5e">


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title_zone_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="25dp"
        android:text="@string/list_zone_activity"
        android:layout_gravity="center">
    </TextView>

    <GridView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnWidth="70dp"
        android:numColumns="3"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:id="@+id/grid_dish">


    </GridView>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_dishes_zone_fragment"
        android:layout_gravity="left|center_vertical"
        />

</LinearLayout>
