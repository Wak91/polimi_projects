extends layout

script.
	function checkField() {
		var name = document.forms["insert_form"]["name"].value;
		if (name==null || name=="") {
			return false;
			alert("ciao");
		}
		var nationality = document.forms["insert_form"]["nationality"].value;
		if (nationality==null || nationality=="") {
			return false;
		}
		return true;
	}

block content
	.row
		.col-xs-12.col-sm-12.col-md-12.col-lg-12
			.col-md-8.col-md-offset-2
				.well.well-sm
					form.form-horizontal(name='insert_form',action='/dishes',onsubmit='return checkField()',method='post')
						fieldset
							legend.text-center.header Dish
							.form-group
								.col-md-2.col-md-offset-1
									label(for='name') Name
								.col-md-8
									input#name.form-control(name='name', type='text', placeholder='Name')
							.form-group
								.col-md-2.col-md-offset-1
									label(for='nationality') Nationality
								.col-md-8
									input#nationality.form-control(name='nationality', type='text', placeholder='Nationality')
							.form-group
								.col-md-2.col-md-offset-1
									label(for='description') Description
								.col-md-8
									input#description.form-control(name='description', type='text', placeholder='description')
							.form-group
								.col-md-2.col-md-offset-1
									label(for='image') Image
								.col-md-8
									input#image.form-control(name='imageUrl', type='text', placeholder='image url')
							.form-group
								.col-md-2.col-md-offset-1
									label(for='zone') Zone
								.col-md-8
									select#zone.form-control(name='zone')
										for zone in zones
											option(value=item) #{zone}
							.form-group
								.col-md-12.text-center
									button.btn.btn-primary.btn-lg(type='submit') Create

