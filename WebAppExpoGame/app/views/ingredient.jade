extends layout

block content
	.row
		.col-xs-12.col-sm-12.col-md-12.col-lg-12
			.col-md-8.col-md-offset-2
				.well.well-sm
					form.form-horizontal(name='insert_form',action='/ingredients',onsubmit='return checkField()',method='post')
						fieldset
							legend.text-center.header Ingredient
								if error_message
									.alert.alert-danger(role='alert')
										span.glyphicon.glyphicon-exclamation-sign
											span #{error_message}


							.form-group
								.col-md-2.col-md-offset-1
									label(for='name') Name
								.col-md-8
									input#name.form-control(name='name', type='text', placeholder='Insert name...')
							.form-group
								.col-md-2.col-md-offset-1
									label(for='image') Image
								.col-md-8
									input#image.form-control(name='imageUrl', type='file', placeholder='Insert image...')
							.form-group
								.col-md-12.text-center
									button.btn.btn-primary.btn-lg(type='submit') Create
//
	script.
		function checkField() {
			var name = document.forms["insert_form"]["name"].value;
			if (name==null || name=="") {
				return false;
			}
			var zone = document.forms["insert_form"]["image"].value;
			if (zone==null || zone=="") {
				return false;
			}
			return true;
		}