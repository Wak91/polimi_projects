extends layout


block content
	.row
		.col-xs-12.col-sm-12.col-md-12.col-lg-12
			.row.text-center
				h1 #{title}
			.row
				if error_message
					.alert.alert-danger(role='alert')
						span.glyphicon.glyphicon-exclamation-sign
							span #{error_message}

				form.form-horizontal(name='generate',action='/generate',method='post')
					.form-group
						.col-md-12.text-center
							button.btn.btn-primary.btn-lg(type='submit') Generate
				form.form-horizontal(name='download',action='generate/download',method='post')
					.form-group
						.col-md-12.text-center
							button.btn.btn-primary.btn-lg(type='submit') Download


			