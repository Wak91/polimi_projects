extends layout


block content
	.row
		.col-xs-6.col-sm-6.col-md-6.col-lg-6
			.row.text-center
				h1 #{title}
			.row
				if error_message
					.alert.alert-danger(role='alert')
						span.glyphicon.glyphicon-exclamation-sign
							span #{error_message}



				form.form-horizontal(name='generate',action='/generate/db',method='post')
					.form-group
						.col-md-12.text-center
							button.btn.btn-primary.btn-lg(type='submit') Generate DB and Images
				form.form-horizontal(name='generate',action='/generate/xml',method='post')
					.form-group
						.col-md-12.text-center
							button.btn.btn-primary.btn-lg(type='submit') Generate Xml
				form.form-horizontal(name='download',action='generate/download',method='post')
					.form-group
						.col-md-12.text-center
							button.btn.btn-primary.btn-lg(type='submit') Download Database

				form.form-horizontal(name='download',action='/images/download',method='post')
					.form-group
						.col-md-12.text-center
							button.btn.btn-primary.btn-lg(type='submit') Download Images

				form.form-horizontal(name='download',action='/generate/download/xml',method='post')
					.form-group
						.col-md-12.text-center
							button.btn.btn-primary.btn-lg(type='submit') Download Xmls


		.col-xs-6.col-sm-6.col-md-6.col-lg-6
			.row.text-center
				h1 Upload Image
			.row
				if error_message
					.alert.alert-danger(role='alert')
						span.glyphicon.glyphicon-exclamation-sign
							span #{error_message}

				form.form-horizontal(name='insert_form',action='/images',method='post',enctype="multipart/form-data")
						
							.form-group
								.col-md-2.col-md-offset-1
									label(for='image') Image
								.col-md-8
									input#image.form-control(name='imageUrl', type='file', placeholder='Insert image...')
							
							.form-group
								.col-md-12.text-center
									button.btn.btn-primary.btn-lg(type='submit') Upload Image


			